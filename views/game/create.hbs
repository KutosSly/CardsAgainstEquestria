{{#extend 'layouts/default'}}

    {{#replace 'content'}}
        <form id="create" method="post" class="form-horizontal">
            <h1>Host a new game</h1>

            <p class="todo">
                general crap no one reads anyway
            </p>

            <p class="todo">
                potential error messages (already hosting a game, maximum games reached, whatever)
            </p>

            <p class="todo">
                presets
            </p>

            <input type="submit" id="submit" value="Create game">
        </form>
        <br/>
    {{/replace}}

    {{#append 'defer'}}
        <script>
            $(function () {
                $('#submit').click(function () {

                    $.ajax('/ajax/game/create', {
                        method: 'post',
                        success: function (data) {
                            window.location.href = '/game/lobby/' + data.id;
                        }
                    });

                    return false;
                });
            });
        </script>
    {{/append}}

{{/extend}}
